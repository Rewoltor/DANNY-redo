{
  "name": "feelfgood-react",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "vite preview",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx,js,jsx}' --fix",
    "stylelint": "stylelint 'styles/**/*.css'",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,css}'",
    "firebase:serve": "npm run build && npx firebase serve",
    "firebase:deploy": "npm run build && npx firebase deploy"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.14.1",
    "tailwind": "^4.0.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "firebase-tools": "^14.19.1",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "postcss": "^8.4.0",
    "prettier": "^2.8.8",
    "stylelint": "^15.10.0",
    "stylelint-config-standard": "^32.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "styles/**/*.css": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "prepare": "husky install"
}
